<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.qingfeng.loveletter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".guide.GuideActivity"
            android:theme="@style/AppTheme.FullScreen"/>
        <activity android:name=".login.LoginActivity"/>
        <activity
            android:name=".register.RegisterActivity"
            android:parentActivityName=".login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".login.LoginActivity"/>
        </activity>
        <activity android:name=".main.MainActivity"/>
        //软键盘的控制的属性
        <!-- android:windowSoftInputMode="adjustUnspecified|stateHidden" -->
        <activity
            android:name=".chat.ChatActivity"
            android:parentActivityName=".main.MainActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.MainActivity"/>
        </activity>
        <activity
            android:name=".chat.DetailActivity"
            android:parentActivityName=".main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.MainActivity"/>
        </activity>
        <activity
            android:name=".setting.SettingActivity"
            android:parentActivityName=".main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.MainActivity"/>
        </activity>
        <activity
            android:name=".main.AddFriendActivity"
            android:parentActivityName=".main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".main.MainActivity"/>
        </activity>
        <activity
            android:name=".setting.MessageAlertActivity"
            android:parentActivityName=".setting.SettingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".setting.SettingActivity"/>
        </activity>

        <service
            android:name=".service.IMService"
            android:enabled="true"
            android:exported="true"/>

        <provider
            android:name=".provider.ContactProvider"
            android:authorities="cn.qingfeng.loveletter.provider.ContactProvider"
            android:enabled="true"
            android:exported="true"/>
        <provider
            android:name=".provider.SmsProvider"
            android:authorities="cn.qingfeng.loveletter.provider.SmsProvider"
            android:enabled="true"
            android:exported="true"/>
        <provider
            android:name=".provider.AccountProvider"
            android:authorities="cn.qingfeng.loveletter.provider.AccountProvider"
            android:enabled="true"
            android:exported="true"/>

    </application>

</manifest>